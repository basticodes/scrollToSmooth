{
	"compilerOptions": {
		"target": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowJs": true,
		"noImplicitAny": false,
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"typeRoots": [
			"./types", 
			"./node_modules/@types"
		]
	},
	"include": [
		"src/**/*",
		"build/**/*"
	]
}
